{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/index.ts",
    "src/cli.ts", "src/skip-rules/**/*.ts"],
  "exclude": ["node_modules", "lib", "tests", "coverage"]
}
